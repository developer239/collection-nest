{
  "compilerOptions": {
    "module": "es2015",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "baseUrl": "./",
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "paths": {
      "auth/*": ["packages/auth/src/*"],
      "environment/*": ["packages/environment/src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
